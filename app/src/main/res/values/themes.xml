<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="Theme.Ludiary" parent="Theme.Material3.DayNight.NoActionBar">

        <!-- Primary / Secondary -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorOnPrimary">@color/colorOnPrimary</item>
        <item name="colorPrimaryContainer">@color/colorPrimaryContainer</item>
        <item name="colorOnPrimaryContainer">@color/colorOnPrimaryContainer</item>

        <item name="colorSecondary">@color/colorSecondary</item>
        <item name="colorOnSecondary">@color/colorOnSecondary</item>
        <item name="colorSecondaryContainer">@color/colorSecondaryContainer</item>
        <item name="colorOnSecondaryContainer">@color/colorOnSecondaryContainer</item>

        <!-- Surfaces -->
        <item name="colorSurface">@color/colorSurface</item>
        <item name="colorOnSurface">@color/colorOnSurface</item>
        <item name="colorSurfaceVariant">@color/colorSurfaceVariant</item>
        <item name="colorOnSurfaceVariant">@color/colorOnSurfaceVariant</item>

        <!-- Outline -->
        <item name="colorOutline">@color/colorOutline</item>
        <item name="colorOutlineVariant">@color/colorOutlineVariant</item>

        <!-- Window -->
        <item name="android:windowBackground">@color/colorSurface</item>

        <!-- Fonts -->
        <item name="android:fontFamily">@font/roboto</item>
        <item name="fontFamily">@font/roboto</item>

        <!-- Diálogos -->
        <item name="android:datePickerDialogTheme">@style/Dialog.Theme.Ludiary.DatePicker</item>

        <!-- PopupMenu -->
        <item name="popupMenuStyle">@style/Widget.Ludiary.PopupMenu</item>
        <item name="android:popupMenuStyle">@style/Widget.Ludiary.PopupMenu</item>

    </style>

    <!-- Estilo personalizado para DatePicker -->
    <style name="Dialog.Theme.Ludiary.DatePicker" parent="ThemeOverlay.Material3.MaterialCalendar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorOnPrimary">@color/colorOnPrimary</item>
        <item name="colorSurface">@color/colorSurface</item>
        <item name="colorOnSurface">@color/colorOnSurface</item>
        <item name="colorSecondary">@color/colorPrimary</item>
        <item name="colorOnSecondary">@color/colorOnPrimary</item>
        <item name="colorSecondaryContainer">@color/colorPrimaryContainer</item>
        <item name="colorOnSecondaryContainer">@color/colorOnPrimaryContainer</item>
    </style>

    <style name="App.Custom.Indicator"
        parent="Widget.Material3.BottomNavigationView.ActiveIndicator">
        <item name="android:color">@color/colorPrimaryContainer</item>
    </style>

    <style name="LudiaryButtonPrimary" parent="Widget.Material3.Button">
        <item name="cornerRadius">@dimen/radius_button_pill</item>
        <item name="android:background">@drawable/btn_primary_gradient</item>
        <item name="backgroundTint">@null</item>
        <item name="android:textColor">?attr/colorOnPrimaryContainer</item>
    </style>

    <style name="Widget.Ludiary.PopupMenu" parent="Widget.Material3.PopupMenu">
        <item name="android:popupBackground">@drawable/bg_popup_menu</item>
        <!-- Forzamos fondo blanco/surface para evitar tints automáticos -->
        <item name="android:background">@color/colorSurface</item>
        <item name="android:colorBackground">@color/colorSurface</item>
    </style>


</resources>