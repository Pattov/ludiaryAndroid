<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/space_s"
    android:clickable="true"
    android:focusable="true"
    app:cardCornerRadius="@dimen/card_radius_m"
    app:cardElevation="@dimen/card_elevation_s"
    app:strokeWidth="@dimen/space_none">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="@dimen/space_m">

        <!-- TÃ­tulo -->
        <TextView
            android:id="@+id/textGameTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAppearance="@style/TextAppearance.Material3.TitleMedium"
            android:textStyle="bold"
            android:maxLines="2"
            android:ellipsize="end" />

        <!-- Meta -->
        <TextView
            android:id="@+id/textGameMeta"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/space_xs"
            android:textAppearance="@style/TextAppearance.Material3.BodyMedium"
            android:textColor="?attr/colorOnSurfaceVariant" />

        <!-- Propietario / Grupo -->
        <TextView
            android:id="@+id/textOwnerInfo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/space_xs"
            android:textAppearance="@style/TextAppearance.Material3.BodySmall"
            android:textStyle="italic"
            android:textColor="?attr/colorPrimary"
            android:visibility="gone" />

        <!-- Acciones (abajo, izquierda) -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/space_m"
            android:gravity="start"
            android:orientation="horizontal">

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnEditGame"
                style="@style/Widget.Material3.Button.TonalButton"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/profile_button_height"
                android:text="@string/action_edit"
                android:textAllCaps="false" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnDeleteGame"
                style="@style/Widget.Material3.Button.TonalButton"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/profile_button_height"
                android:layout_marginStart="@dimen/space_s"
                android:text="@string/action_delete"
                android:textAllCaps="false" />
        </LinearLayout>

    </LinearLayout>

</com.google.android.material.card.MaterialCardView>