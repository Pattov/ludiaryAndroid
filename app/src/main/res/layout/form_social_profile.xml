<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/friendsRoot"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <!-- APP BAR -->
    <com.google.android.material.appbar.AppBarLayout
        android:id="@+id/appBar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fitsSystemWindows="true"
        android:background="?attr/colorSurface">

        <com.google.android.material.appbar.MaterialToolbar
            android:id="@+id/topAppBar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            app:title="@string/profile_friends"
            android:fitsSystemWindows="false"
            app:navigationIcon="@drawable/ic_arrow_back"
            app:navigationIconTint="?attr/colorOnSurface"
            app:titleTextColor="?attr/colorOnSurface"
            android:background="?attr/colorSurface"
            app:contentInsetStartWithNavigation="@dimen/space_none" />

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/inputSearch"
            style="@style/Widget.Material3.TextInputLayout.OutlinedBox"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/profile_padding_horizontal"
            android:layout_marginEnd="@dimen/profile_padding_horizontal"
            android:layout_marginTop="@dimen/space_m"
            android:hint="@string/friends_search_hint">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/textSearchFriends"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:imeOptions="actionSearch"
                android:inputType="text" />
        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.card.MaterialCardView
            android:id="@+id/cardMyCode"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/profile_padding_horizontal"
            android:layout_marginEnd="@dimen/profile_padding_horizontal"
            android:layout_marginTop="@dimen/space_m"
            android:layout_marginBottom="@dimen/space_s"
            app:cardCornerRadius="@dimen/card_radius_m"
            app:cardElevation="@dimen/card_elevation_s"
            app:strokeWidth="@dimen/space_none">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="@dimen/space_m">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/profile_my_code"
                    android:textAppearance="@style/TextAppearance.Material3.LabelLarge" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:layout_marginTop="@dimen/space_s">

                    <TextView
                        android:id="@+id/tvMyFriendCode"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="@string/friends_code_placeholder"
                        android:textAppearance="@style/TextAppearance.Material3.TitleMedium" />

                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/btnCopyCode"
                        style="@style/Widget.Material3.Button.IconButton"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        app:icon="@drawable/ic_copy"
                        app:iconTint="?attr/colorOnSurface"
                        android:contentDescription="@string/action_copy" />

                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/btnShareCode"
                        style="@style/Widget.Material3.Button.IconButton"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        app:icon="@drawable/ic_share"
                        app:iconTint="?attr/colorOnSurface"
                        android:contentDescription="@string/action_share" />

                </LinearLayout>

            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>

        <com.google.android.material.tabs.TabLayout
            android:id="@+id/tabFriends"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:contentDescription="@string/profile_friends_tabs_cd"
            app:tabIndicatorFullWidth="false"
            app:tabMode="fixed"
            app:tabGravity="fill" />

    </com.google.android.material.appbar.AppBarLayout>

    <androidx.viewpager2.widget.ViewPager2
        android:id="@+id/pagerFriends"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_behavior="@string/appbar_scrolling_view_behavior" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/btnPrimary"
        style="@style/Widget.Material3.Button.TonalButton"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/profile_button_height"
        android:minWidth="@dimen/login_button_min_width"
        android:maxWidth="@dimen/login_button_max_width"
        android:text="@string/profile_friends_add_friend"
        android:textAllCaps="false"
        app:layout_anchor="@id/pagerFriends"
        app:layout_anchorGravity="bottom|center_horizontal"
        android:layout_marginBottom="@dimen/space_l"/>

</androidx.coordinatorlayout.widget.CoordinatorLayout>