<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:padding="24dp"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <!-- Título de la pantalla -->

        <!-- TARJETA DE DATOS DEL USUARIO -->
        <TextView
            android:id="@+id/tvTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingBottom="16dp"
            android:text="@string/profile_title"
            android:textSize="22sp"
            android:textStyle="bold" />

        <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardCornerRadius="16dp"
            app:cardElevation="2dp"
            app:strokeWidth="1dp"
            app:strokeColor="#DDDDDD"
            android:padding="16dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="12dp"
                android:orientation="vertical">

                <!-- Email -->
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/profile_email"
                    android:textStyle="bold"
                    android:textSize="12sp"
                    android:paddingBottom="2dp"/>

                <!-- Email del usuario -->
                <TextView
                    android:id="@+id/tvEmail"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingBottom="2dp"
                    android:text="@string/profile_guest"
                    android:textSize="14sp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/profile_display_name_hint"
                    android:textStyle="bold"
                    android:textSize="12sp"
                    android:paddingBottom="2dp"/>

                <!-- Nombre visible -->
                <EditText
                    android:id="@+id/etDisplayName"
                    android:hint="@string/profile_display_name"
                    android:autofillHints="name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingVertical="4dp"
                    android:backgroundTint="@color/colorOnPrimary"
                    android:inputType="text"/>

            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>

        <!-- Separador -->
        <Space
            android:layout_width="0dp"
            android:layout_height="24dp" />

        <!-- Tarjeta de preferencias -->
        <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardCornerRadius="16dp"
            app:cardElevation="2dp"
            app:strokeWidth="1dp"
            app:strokeColor="#DDDDDD"
            android:padding="16dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="12dp"
                android:orientation="vertical">

                <TextView
                    android:text="@string/profile_preferences"
                    android:textStyle="bold"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="16sp"
                    android:paddingBottom="8dp"/>

                <!-- Idioma -->
                <TextView
                    android:id="@+id/tvLanguage"
                    android:text="@string/profile_language"
                    android:enabled="false"
                    android:textSize="14sp"
                    android:paddingBottom="4dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

                <!-- Tema -->
                <TextView
                    android:id="@+id/tvTheme"
                    android:text="@string/profile_theme"
                    android:enabled="false"
                    android:textSize="14sp"
                    android:paddingBottom="4dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />

                <!-- Fecha de registro -->
                <TextView
                    android:id="@+id/tvCreatedAt"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="14sp"
                    android:paddingBottom="4dp"
                    android:text="@string/profile_created_at"/>

                <!-- UID (solo para administradores, se oculta dinámicamente) -->
                <TextView
                    android:id="@+id/tvUid"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/profile_uid"
                    android:textSize="14sp"
                    android:paddingTop="4dp"
                    android:visibility="gone"/>

            </LinearLayout>

        </com.google.android.material.card.MaterialCardView>

        <!-- Separador -->
        <Space
            android:layout_width="0dp"
            android:layout_height="24dp" />

        <!-- Acciones: Guardar / Cerrar sesión -->
        <LinearLayout
            android:orientation="horizontal"
            android:gravity="center"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <Button
                android:id="@+id/btnSave"
                android:text="@string/action_save"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"/>
            
            <Space
                android:layout_width="8dp"
                android:layout_height="wrap_content" />

            <Button
                android:id="@+id/btnLogout"
                android:text="@string/profile_logout"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"/>

        </LinearLayout>

    </LinearLayout>

</ScrollView>