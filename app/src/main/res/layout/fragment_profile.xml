<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    android:paddingStart="@dimen/profile_padding_horizontal"
    android:paddingEnd="@dimen/profile_padding_horizontal"
    android:paddingTop="@dimen/profile_padding_top"
    android:paddingBottom="@dimen/profile_padding_bottom">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!-- Título general -->
        <TextView
            android:id="@+id/tvProfileTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/profile_title"
            android:textAppearance="@style/TextAppearance.Material3.HeadlineMedium"
            android:textStyle="bold"
            android:paddingBottom="@dimen/space_l" />

        <!-- Nombre -->
        <TextView
            android:id="@+id/tvDisplayName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAppearance="@style/TextAppearance.Material3.TitleLarge"
            android:textStyle="bold"
            android:paddingBottom="@dimen/space_s" />

        <!-- Email -->
        <TextView
            android:id="@+id/tvEmail"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAppearance="@style/TextAppearance.Material3.BodyMedium"
            android:textColor="?attr/colorOnSurfaceVariant"
            android:paddingBottom="@dimen/space_xl" />

        <!-- OPCIONES -->
        <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardElevation="@dimen/space_none"
            app:strokeWidth="1dp"
            app:strokeColor="?attr/colorOutlineVariant"
            app:shapeAppearanceOverlay="@style/ShapeAppearance.Material3.Corner.Medium">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <!-- Editar perfil -->
                <LinearLayout
                    android:id="@+id/rowEditProfile"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:minHeight="@dimen/touch_target_min_height"
                    android:gravity="center_vertical"
                    android:paddingHorizontal="@dimen/space_m"
                    android:paddingVertical="@dimen/space_s"
                    android:clickable="true"
                    android:focusable="true"
                    android:foreground="?attr/selectableItemBackground">

                    <ImageView
                        android:layout_width="@dimen/icon_container_size"
                        android:layout_height="@dimen/icon_container_size"
                        android:background="@drawable/bg_icon_round"
                        android:padding="@dimen/icon_padding"
                        android:src="@drawable/ic_edit"
                        app:tint="?attr/colorOnPrimaryContainer"
                        android:importantForAccessibility="no" />

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:paddingStart="@dimen/space_m"
                        android:paddingEnd="@dimen/space_none"
                        android:text="@string/profile_edit_title"
                        android:textAppearance="@style/TextAppearance.Material3.BodyLarge" />

                    <ImageView
                        android:layout_width="@dimen/chevron_size"
                        android:layout_height="@dimen/chevron_size"
                        android:src="@drawable/ic_arrow_right"
                        app:tint="?attr/colorOnSurfaceVariant"
                        android:importantForAccessibility="no"
                        android:contentDescription="@null" />
                </LinearLayout>

                <com.google.android.material.divider.MaterialDivider
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:dividerInsetStart="@dimen/space_none"
                    app:dividerInsetEnd="@dimen/space_none" />

                <!-- Amigos -->
                <LinearLayout
                    android:id="@+id/rowFriends"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:minHeight="@dimen/touch_target_min_height"
                    android:gravity="center_vertical"
                    android:paddingHorizontal="@dimen/space_m"
                    android:paddingVertical="@dimen/space_s"
                    android:clickable="true"
                    android:focusable="true"
                    android:foreground="?attr/selectableItemBackground">

                    <ImageView
                        android:layout_width="@dimen/icon_container_size"
                        android:layout_height="@dimen/icon_container_size"
                        android:background="@drawable/bg_icon_round"
                        android:padding="@dimen/icon_padding"
                        android:src="@drawable/ic_friend"
                        app:tint="?attr/colorOnPrimaryContainer"
                        android:importantForAccessibility="no" />

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:paddingStart="@dimen/space_m"
                        android:paddingEnd="@dimen/space_none"
                        android:text="@string/profile_friends"
                        android:textAppearance="@style/TextAppearance.Material3.BodyLarge" />

                    <ImageView
                        android:layout_width="@dimen/chevron_size"
                        android:layout_height="@dimen/chevron_size"
                        android:src="@drawable/ic_arrow_right"
                        app:tint="?attr/colorOnSurfaceVariant"
                        android:importantForAccessibility="no"
                        android:contentDescription="@null" />
                </LinearLayout>

                <com.google.android.material.divider.MaterialDivider
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:dividerInsetStart="@dimen/space_none"
                    app:dividerInsetEnd="@dimen/space_none" />

                <!-- Preferencias -->
                <LinearLayout
                    android:id="@+id/rowPreferences"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:minHeight="@dimen/touch_target_min_height"
                    android:gravity="center_vertical"
                    android:paddingHorizontal="@dimen/space_m"
                    android:paddingVertical="@dimen/space_s"
                    android:clickable="true"
                    android:focusable="true"
                    android:foreground="?attr/selectableItemBackground">

                    <ImageView
                        android:layout_width="@dimen/icon_container_size"
                        android:layout_height="@dimen/icon_container_size"
                        android:background="@drawable/bg_icon_round"
                        android:padding="@dimen/icon_padding"
                        android:src="@drawable/ic_settings"
                        app:tint="?attr/colorOnPrimaryContainer"
                        android:importantForAccessibility="no" />

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:paddingStart="@dimen/space_m"
                        android:paddingEnd="@dimen/space_none"
                        android:text="@string/profile_preferences"
                        android:textAppearance="@style/TextAppearance.Material3.BodyLarge" />

                    <ImageView
                        android:layout_width="@dimen/chevron_size"
                        android:layout_height="@dimen/chevron_size"
                        android:src="@drawable/ic_arrow_right"
                        app:tint="?attr/colorOnSurfaceVariant"
                        android:importantForAccessibility="no"
                        android:contentDescription="@null" />
                </LinearLayout>

                <com.google.android.material.divider.MaterialDivider
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:dividerInsetStart="@dimen/space_none"
                    app:dividerInsetEnd="@dimen/space_none" />

                <!-- Sincronización -->
                <LinearLayout
                    android:id="@+id/rowSync"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:minHeight="@dimen/touch_target_min_height"
                    android:gravity="center_vertical"
                    android:paddingHorizontal="@dimen/space_m"
                    android:paddingVertical="@dimen/space_s"
                    android:clickable="true"
                    android:focusable="true"
                    android:foreground="?attr/selectableItemBackground">

                    <ImageView
                        android:layout_width="@dimen/icon_container_size"
                        android:layout_height="@dimen/icon_container_size"
                        android:background="@drawable/bg_icon_round"
                        android:padding="@dimen/icon_padding"
                        android:src="@drawable/ic_sync"
                        app:tint="?attr/colorOnPrimaryContainer"
                        android:importantForAccessibility="no" />

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:paddingStart="@dimen/space_m"
                        android:paddingEnd="@dimen/space_none"
                        android:text="@string/profile_sync"
                        android:textAppearance="@style/TextAppearance.Material3.BodyLarge" />

                    <ImageView
                        android:layout_width="@dimen/chevron_size"
                        android:layout_height="@dimen/chevron_size"
                        android:src="@drawable/ic_arrow_right"
                        app:tint="?attr/colorOnSurfaceVariant"
                        android:importantForAccessibility="no"
                        android:contentDescription="@null" />
                </LinearLayout>

            </LinearLayout>

        </com.google.android.material.card.MaterialCardView>

        <!-- Botón Logout -->
        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnLogout"
            style="@style/Widget.Material3.Button.TonalButton"
            android:textColor="@color/colorOnPrimaryContainer"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/profile_button_height"
            android:minWidth="@dimen/login_button_min_width"
            android:maxWidth="@dimen/login_button_max_width"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="@dimen/space_xxl"
            android:text="@string/profile_logout"
            android:textAllCaps="false" />

    </LinearLayout>

</androidx.core.widget.NestedScrollView>
