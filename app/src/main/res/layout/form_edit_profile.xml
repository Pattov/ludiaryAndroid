<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingStart="24dp"
    android:paddingEnd="24dp"
    android:paddingTop="24dp"
    android:paddingBottom="96dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!-- TÃTULO -->
        <TextView
            android:id="@+id/tvEditProfileTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/profile_edit_title"
            android:textSize="26sp"
            android:textStyle="bold"
            android:paddingBottom="24dp" />

        <!-- Alias -->
        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/inputLayoutAlias"
            style="@style/LudiaryTextFieldStyle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/profile_alias_label"
            app:placeholderText="@string/profile_alias_placeholder">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/inputAlias"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="textPersonName" />
        </com.google.android.material.textfield.TextInputLayout>

        <!-- Correo (solo lectura) -->
        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/inputLayoutEmail"
            style="@style/LudiaryTextFieldStyle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:hint="@string/profile_email_label"
            android:enabled="false">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/inputEmail"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="textEmailAddress" />
        </com.google.android.material.textfield.TextInputLayout>

        <!-- Registro (solo lectura) -->
        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/inputLayoutCreatedAt"
            style="@style/LudiaryTextFieldStyle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:hint="@string/profile_created_at_label"
            android:enabled="false">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/inputCreatedAt"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
        </com.google.android.material.textfield.TextInputLayout>

        <!-- UID (solo lectura) -->
        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/inputLayoutUid"
            style="@style/LudiaryTextFieldStyle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:hint="@string/profile_uid_label"
            android:enabled="false"
            android:visibility="gone">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/inputUid"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
        </com.google.android.material.textfield.TextInputLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="end"
            android:paddingTop="24dp">

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnCancelEdit"
                style="@style/Widget.Material3.Button.TonalButton"
                android:layout_width="wrap_content"
                android:layout_height="48dp"
                android:text="@string/action_cancel"
                android:textAllCaps="false" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnSaveEdit"
                style="@style/Widget.Material3.Button.TonalButton"
                android:layout_width="wrap_content"
                android:layout_height="48dp"
                android:layout_marginStart="16dp"
                android:text="@string/action_save"
                android:textAllCaps="false" />
        </LinearLayout>

    </LinearLayout>

</ScrollView>
