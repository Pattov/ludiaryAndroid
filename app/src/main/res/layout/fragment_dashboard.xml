<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    android:paddingStart="@dimen/dashboard_padding_horizontal"
    android:paddingEnd="@dimen/dashboard_padding_horizontal"
    android:paddingTop="@dimen/dashboard_padding_top"
    android:paddingBottom="@dimen/profile_padding_bottom">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!-- Header -->
        <TextView
            android:id="@+id/tvDashboardTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/dashboard_title"
            android:textAppearance="@style/TextAppearance.Material3.HeadlineMedium"
            android:textStyle="bold"
            android:paddingBottom="@dimen/space_m" />

        <!-- KPIs -->
        <GridLayout
            android:id="@+id/gridKpis"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:columnCount="2"
            android:useDefaultMargins="true">

            <include
                layout="@layout/item_dashboard_kpi"
                android:layout_columnWeight="1"
                android:layout_height="match_parent"
                android:layout_width="@dimen/space_none"/>

            <include
                layout="@layout/item_dashboard_kpi"
                android:layout_columnWeight="1"
                android:layout_height="match_parent"
                android:layout_width="@dimen/space_none"/>

            <include
                layout="@layout/item_dashboard_kpi"
                android:layout_columnWeight="1"
                android:layout_height="match_parent"
                android:layout_width="@dimen/space_none"/>

            <include
                layout="@layout/item_dashboard_kpi"
                android:layout_columnWeight="1"
                android:layout_height="match_parent"
                android:layout_width="@dimen/space_none"/>

        </GridLayout>

        <!-- Actividad reciente -->
        <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/space_l"
            app:cardCornerRadius="@dimen/card_radius_m"
            app:cardElevation="@dimen/card_elevation_s"
            app:strokeWidth="@dimen/space_none">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="@dimen/space_m"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tvRecentTitle"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/dashboard_recent_activity"
                    android:textAppearance="@style/TextAppearance.Material3.TitleMedium"
                    android:textStyle="bold"
                    android:paddingBottom="@dimen/space_s" />

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/recyclerRecentSessions"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:nestedScrollingEnabled="false" />

            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>

        <!-- Calendario semanal -->
        <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/space_l"
            app:cardCornerRadius="@dimen/card_radius_m"
            app:cardElevation="@dimen/card_elevation_s"
            app:strokeWidth="@dimen/space_none">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="@dimen/space_m"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tvWeekTitle"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/dashboard_week"
                    android:textAppearance="@style/TextAppearance.Material3.TitleMedium"
                    android:textStyle="bold"
                    android:paddingBottom="@dimen/space_s" />

                <LinearLayout
                    android:id="@+id/weekContainer"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:orientation="horizontal" />

            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>

        <!-- EstadÃ­sticas -->
        <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/space_l"
            app:cardCornerRadius="@dimen/card_radius_m"
            app:cardElevation="@dimen/card_elevation_s"
            app:strokeWidth="@dimen/space_none">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="@dimen/space_m"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tvStatsTitle"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/dashboard_stats"
                    android:textAppearance="@style/TextAppearance.Material3.TitleMedium"
                    android:textStyle="bold"
                    android:paddingBottom="@dimen/space_s" />

                <com.github.mikephil.charting.charts.BarChart
                    android:id="@+id/chartWeeklySessions"
                    android:layout_width="match_parent"
                    android:layout_height="200dp" />

            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>

    </LinearLayout>
</androidx.core.widget.NestedScrollView>