<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="@dimen/space_none"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/space_s"
    app:cardCornerRadius="@dimen/card_radius_m"
    app:cardElevation="@dimen/card_elevation_s"
    app:strokeWidth="@dimen/space_none">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="@dimen/space_m"
        android:gravity="center_vertical">

        <!-- Texto -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tvKpiLabel"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textAppearance="@style/TextAppearance.Material3.BodySmall"
                android:textColor="?attr/colorOnSurfaceVariant"
                android:maxLines="1"
                android:ellipsize="end" />

            <TextView
                android:id="@+id/tvKpiValue"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/space_xs"
                android:textAppearance="@style/TextAppearance.Material3.HeadlineSmall"
                android:textStyle="bold"
                android:maxLines="1"
                android:ellipsize="end" />
        </LinearLayout>

        <!-- Icono circular -->
        <com.google.android.material.card.MaterialCardView
            android:id="@+id/kpiIconCircle"
            android:layout_width="44dp"
            android:layout_height="44dp"
            app:cardCornerRadius="22dp"
            app:cardElevation="@dimen/space_none"
            app:strokeWidth="@dimen/space_none"
            app:cardBackgroundColor="?attr/colorPrimary">

            <ImageView
                android:id="@+id/ivKpiIcon"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:padding="10dp"
                android:src="@drawable/ic_dashboard_filled"
                android:contentDescription="@null"
                app:tint="?attr/colorOnPrimary" />
        </com.google.android.material.card.MaterialCardView>

    </LinearLayout>

</com.google.android.material.card.MaterialCardView>
