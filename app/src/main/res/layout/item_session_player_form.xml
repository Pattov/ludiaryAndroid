<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center_vertical"
    android:orientation="horizontal"
    android:paddingTop="@dimen/space_s"
    android:paddingBottom="@dimen/space_s">

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/inputLayoutPlayerName"
        style="@style/Widget.Material3.TextInputLayout.OutlinedBox"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:hint="@string/edit_session_player_name_hint">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/inputPlayerName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:imeOptions="actionNext"
            android:maxLines="1" />
    </com.google.android.material.textfield.TextInputLayout>

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/inputLayoutPlayerScore"
        style="@style/Widget.Material3.TextInputLayout.OutlinedBox"
        android:layout_width="@dimen/session_score_field_width"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/space_s"
        android:hint="@string/edit_session_player_score_hint">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/inputPlayerScore"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="number"
            android:imeOptions="actionDone"
            android:maxLines="1" />
    </com.google.android.material.textfield.TextInputLayout>

    <!-- Ganador -->
    <com.google.android.material.button.MaterialButton
        android:id="@+id/btnWinner"
        style="@style/Widget.Material3.Button.IconButton"
        android:layout_width="@dimen/icon_button_size"
        android:layout_height="@dimen/icon_button_size"
        android:layout_marginStart="@dimen/space_xs"
        android:contentDescription="@string/edit_session_player_winner_cd"
        app:icon="@drawable/ic_trophy"
        app:iconTint="?attr/colorOnSurfaceVariant" />

    <!-- Eliminar -->
    <com.google.android.material.button.MaterialButton
        android:id="@+id/btnRemovePlayer"
        style="@style/Widget.Material3.Button.IconButton"
        android:layout_width="@dimen/icon_button_size"
        android:layout_height="@dimen/icon_button_size"
        android:layout_marginStart="@dimen/space_xs"
        android:contentDescription="@string/edit_session_player_remove_cd"
        app:icon="@drawable/ic_close"
        app:iconTint="?attr/colorOnSurfaceVariant" />

</LinearLayout>
