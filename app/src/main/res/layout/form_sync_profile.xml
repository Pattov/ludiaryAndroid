<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingStart="24dp"
    android:paddingEnd="24dp"
    android:paddingTop="24dp"
    android:paddingBottom="96dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!-- TÍTULO -->
        <TextView
            android:id="@+id/tvSyncTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/profile_sync"
            android:textStyle="bold"
            android:textSize="20sp"
            android:paddingBottom="24dp" />

        <!-- MODO DE SINCRONIZACIÓN -->
        <TextView
            android:id="@+id/tvSyncModeTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/profile_sync_mode_title"
            android:textStyle="bold"
            android:paddingBottom="8dp" />

        <LinearLayout
            android:id="@+id/rowSyncMode"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:padding="8dp">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/profile_sync_mode_auto_label"
                android:textSize="16sp" />

            <com.google.android.material.materialswitch.MaterialSwitch
                android:id="@+id/switchAutoSync"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                tools:ignore="UseSwitchCompatOrMaterialXml" />
        </LinearLayout>

        <TextView
            android:id="@+id/tvSyncModeHelp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/profile_sync_mode_help"
            android:textSize="13sp"
            android:textColor="#666666"
            android:paddingBottom="24dp" />

        <!-- ESTADO DE SINCRONIZACIÓN -->
        <TextView
            android:id="@+id/tvSyncStatusTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/profile_sync_status_title"
            android:textStyle="bold"
            android:paddingBottom="8dp" />

        <!-- Última sync catálogo -->
        <LinearLayout
            android:id="@+id/rowLastCatalogSync"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:padding="8dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/profile_sync_last_catalog_label"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/tvLastCatalogSync"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="end"
                android:text="@string/profile_sync_never"
                android:textSize="14sp" />
        </LinearLayout>

        <!-- Última sync ludoteca -->
        <LinearLayout
            android:id="@+id/rowLastLibrarySync"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:padding="8dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/profile_sync_last_library_label"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/tvLastLibrarySync"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="end"
                android:text="@string/profile_sync_never"
                android:textSize="14sp" />
        </LinearLayout>

        <!-- WARNING MANUAL -->
        <TextView
            android:id="@+id/tvManualWarning"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/profile_sync_manual_warning"
            android:textSize="14sp"
            android:textColor="#B00020"
            android:background="#1AFF0000"
            android:padding="8dp"
            android:visibility="gone"
            android:layout_marginTop="16dp" />

        <!-- BOTÓN MANUAL -->
        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnSyncNow"
            style="?attr/materialButtonTonalStyle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:text="@string/profile_sync_now"
            android:enabled="false" />

    </LinearLayout>

</ScrollView>
