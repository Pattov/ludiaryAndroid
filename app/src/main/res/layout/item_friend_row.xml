<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/friendRowRoot"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/space_s"
    android:clickable="true"
    android:focusable="true"
    android:foreground="?attr/selectableItemBackground"
    app:cardCornerRadius="@dimen/card_radius_m"
    app:cardElevation="@dimen/card_elevation_s"
    app:strokeWidth="@dimen/space_none">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:minHeight="@dimen/touch_target_min_height"
        android:paddingStart="@dimen/space_m"
        android:paddingEnd="@dimen/space_m"
        android:paddingTop="@dimen/space_s"
        android:paddingBottom="@dimen/space_s">

        <!-- Avatar -->
        <com.google.android.material.card.MaterialCardView
            android:id="@+id/avatar"
            android:layout_width="@dimen/space_xxl"
            android:layout_height="@dimen/space_xxl"
            app:cardCornerRadius="@dimen/space_l"
            app:cardElevation="@dimen/space_none"
            app:strokeWidth="@dimen/space_none"
            app:cardBackgroundColor="?attr/colorPrimaryContainer"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent">

            <TextView
                android:id="@+id/tvAvatarLetter"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:textStyle="bold"
                android:textAppearance="@style/TextAppearance.Material3.TitleMedium"
                android:textColor="?attr/colorOnPrimaryContainer" />
        </com.google.android.material.card.MaterialCardView>

        <!-- Botón Rechazar -->
        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnReject"
            style="@style/Widget.Material3.Button.TextButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/action_reject"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent" />

        <!-- Botón Aceptar -->
        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnAccept"
            style="@style/Widget.Material3.Button.TextButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/action_accept"
            android:layout_marginEnd="@dimen/space_s"
            app:layout_constraintEnd_toStartOf="@id/btnReject"
            app:layout_constraintTop_toTopOf="@id/btnReject"
            app:layout_constraintBottom_toBottomOf="@id/btnReject" />

        <!-- Título -->
        <TextView
            android:id="@+id/tvFriendTitle"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/space_m"
            android:ellipsize="end"
            android:maxLines="1"
            android:textAppearance="@style/TextAppearance.Material3.TitleMedium"
            android:textColor="?attr/colorOnSurface"
            app:layout_constraintStart_toEndOf="@id/avatar"
            app:layout_constraintTop_toTopOf="@id/avatar"
            app:layout_constraintEnd_toStartOf="@id/btnAccept" />

        <!-- Subtítulo -->
        <TextView
            android:id="@+id/tvFriendSubtitle"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/space_m"
            android:ellipsize="end"
            android:maxLines="1"
            android:textAppearance="@style/TextAppearance.Material3.BodyMedium"
            android:textColor="?attr/colorOnSurfaceVariant"
            app:layout_constraintStart_toEndOf="@id/avatar"
            app:layout_constraintTop_toBottomOf="@id/tvFriendTitle"
            app:layout_constraintEnd_toStartOf="@id/btnAccept" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</com.google.android.material.card.MaterialCardView>